<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/wp-phpunit/wp-phpunit/bootstrap.php"
         colors="true">
    <testsuites>
        <testsuite name="wpunit">
            <directory>tests/wpunit</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="WP_PHPUNIT__DIR" value="vendor/wp-phpunit/wp-phpunit"/>
        <env name="WP_TESTS_PHPUNIT_POLYFILLS_PATH" value="vendor/yoast/phpunit-polyfills"/>
        <env name="DB_NAME" value="wordpress_test"/>
        <env name="DB_USER" value="root"/>
        <env name="DB_PASSWORD" value="root"/>
        <env name="DB_HOST" value="127.0.0.1"/>
        <env name="DB_CHARSET" value="utf8"/>
        <env name="DB_COLLATE" value=""/>
        <!-- 開発環境で速度向上のため -->
        <env name="WP_DEBUG" value="1"/>
    </php>
</phpunit>

